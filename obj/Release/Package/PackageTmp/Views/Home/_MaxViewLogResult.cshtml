@using System.Web.UI.WebControls
@model LogBook.ViewModels.MaxView.MaxViewLogViewModel

    <table class="table table-sm table-striped">
        <tr>
            <th>Date</th>
            <th>User</th>
            <th>Comment</th>
        </tr>
        @foreach (var maxViewLog in Model.MaxViewLogs)
        {
            <tr>
                <td>
                    @maxViewLog.Time.ToString("MM/dd/yyyy HH:mm")
                </td>
                <td>@maxViewLog.User</td>
                <td>@maxViewLog.Comment</td>
            </tr>
        }
    </table>

    <div class="d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:GetMaxViewLogsResultPartialView(@(Model.PageNumber - 1))">Prev</a>
                    </li>
                }

                @for (int i = Model.PageNumber - 2; i <= Model.PageNumber + 2; i++)
                {
                    if (i > 0 && i <= Model.TotalPages)
                    {
                        if (i == Model.PageNumber)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="javascript:GetMaxViewLogsResultPartialView(@i)">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" href="javascript:GetMaxViewLogsResultPartialView(@i)">@i</a>
                            </li>
                        }

                    }
                }
                @if (Model.TotalPages > Model.PageNumber)
                {
                    <li class="page-item">
                        <a class="page-link" href="javascript:GetMaxViewLogsResultPartialView(@(Model.PageNumber + 1))">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>

